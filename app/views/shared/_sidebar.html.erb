    				User Profile ▾
  			  </button>
  
             
              <div class="collapse show" id="pageSubmenu">
			  <%= render 'shared/user_profile' %>
                </div>

		
	      </div>
    	</nav>

        <!-- Page Content  -->
      
       <main>
	   		<% if current_user.employee? %>
            <%= render partial: 'shared/tbl1', locals: {employee: @employee, show_name: false}  %>
